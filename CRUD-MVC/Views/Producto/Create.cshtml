
@model Producto
@{
    ViewData["Title"] = "Crear Producto";
}
<h1>@ViewData["Title"]</h1>

<p>En esta página se crean los productos.</p>

<form method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="mb-3">
        <label>Autor</label>
        <input asp-for="Autor" class="form-control">
    </div>
    <div class="mb-3">
        <label>Genero</label>
        <input asp-for="Genero" class="form-control">
    </div>
    <div class="mb-3">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Cantidad</label>
        <input asp-for="Cantidad" class="form-control">
    </div>
    <div class="mb-3">
        <label>Costo</label>
        <input asp-for="Costo" class="form-control">
    </div>
    <div class="row col-6">
        <div class="col-6">
            <button type="submit" class="btn custom-btn-color-2">Regresar</button>
        </div>
        <div class="col-6">
            <button type="submit" class="btn custom-btn-color">Crear</button>
        </div>
    </div>
    
</form>
